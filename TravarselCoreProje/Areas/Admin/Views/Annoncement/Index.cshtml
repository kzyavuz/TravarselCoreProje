@model List<DTOLayer.DTOs.AnnonuncementDTOs.AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Duyuru Syfası</h1>
<a class="btn btn-outline-success mb-3" href="/Admin/Annoncement/AddAnnouncement/">Duyuru Ekle</a>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.AnnonuncementID</td>
            <td>@item.Title</td>
            <td>@item.Content</td>
            <td>
                <a href="/Admin/Annoncement/UpdateAnnoncement/@item.AnnonuncementID" class="btn btn-outline-warning">Güncelle</a>
            </td>
            <td>
                <a href="#" class="btn btn-outline-primary">Detaylar</a>
            </td>
            <td>
                <form asp-controller="Annoncement" asp-action="DeleteAnnouncement" asp-route-id="@item.AnnonuncementID" onsubmit="return confirm('Duyuruyu silmek iştediğinize eminmisiniz')">
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </td>
        </tr>

    }
</table>

