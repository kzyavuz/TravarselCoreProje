@model EntityLayer.Concrete.Destination

@{
    ViewData["Title"] = "UpdateDestinations";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Etkinil Güncelleme Sayfası</h1>

<input type="hidden" asp-for="DestinationID"/>

<form method="post">
    <div class="form-group">
        @Html.Label("Şehir Bilgisi")
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Gün Gece Bilgisi")
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Ana Görsel")
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Kapak Görseli")
        <input type="text" asp-for="BackGroundImage" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Görsel 2")
        <input type="text" asp-for="Image2" class="form-control" />
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Detay 1")
        <textarea cols="30" rows="5" asp-for="Details1" class="form-control"></textarea>
    </div>
    <br />

    <div class="form-group">
        @Html.Label("Detay 2")
        <textarea cols="30" rows="5" asp-for="Details2" class="form-control"></textarea>
    </div>
    <br />

    <button class="btn btn-outline-warning" onclick="alert('Etkinlik Güncellendi');">Güncelle</button>
</form>