
@model CatagoryViewModel

@{
    ViewData["Title"] = "AddCatagory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <a class="btn btn-secondary mb-1" asp-action="Index" asp-controller="Catagory">Geri</a>
    <div class="card">
        <div class="card-header bg-success">
            <h2 class="card-title text-white font-weight-bold">Kategori Ekle</h2>
        </div>
        <div class="card-body">
            <form asp-action="AddCatagory" asp-controller="Catagory" asp-area="Admin" enctype="multipart/form-data">
                <div class="row mb-2 pt-3">
                    <div class="col-9">
                        <div class="mb-2">
                            <label>Başlık</label>
                            <input type="text" asp-for="CatagoryName" class="form-control" required />
                            <span asp-validation-for="CatagoryName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="mb-2">
                            <img src="~/ImageDestination/default_image.png" class="img-fluid" id="thumbnail" />
                        </div>
                        <div class="mb-2">
                            <label>Resim Seçin</label>
                            <input type="file" asp-for="CatagoryImage" class="form-control custom-file-input" required />
                            <span asp-validation-for="CatagoryImage" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="mb-2">
                        <button type="submit" class="btn btn-success w-100">Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelector('.custom-file-input').addEventListener('change', function (e) {
            var file = e.target.files[0];
            if (file) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('thumbnail').src = e.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}
