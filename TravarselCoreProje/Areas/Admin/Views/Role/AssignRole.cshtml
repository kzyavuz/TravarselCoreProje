@model List<RoleAssignModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Atama Sayfası</h1>

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].RolName" />
            <input type="checkbox" asp-for="@Model[i].status" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].status">@Model[i].status</label>
        </div>
    }
    <button class="btn btn-success">Değisiklikleri Kaydet</button>
</form>