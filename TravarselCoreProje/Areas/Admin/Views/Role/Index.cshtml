
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 1;

}


<h1>Rol Liştesi</h1>
<a href="/Admin/Role/AddRole" class="btn btn-outline-success mb-3">Rol Ekle</a>
@if (Model.Count > 0)
{
    <table class="table table-striped">
        <tr>
            <th>#</th>
            <th>Rol Adı</th>
            <th>Rolu Güncelle</th>
            <th>Rolu Sil</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@sayac</td>
                <td>@item.Name</td>
                <td><a class="btn btn-outline-warning" href="/Admin/Role/UpdateRole/@item.Id ">Güncelle</a></td>
                <td><a class="btn btn-outline-danger" href="/Admin/Role/DeleteRole/@item.Id ">Sil</a></td>
            </tr>
            sayac++;
        }

    </table>
}
else
{
    <div class="alert alert-warning text-center">Herhangi Bir Rol Bulunamadı</div>
}