@model EntityLayer.Concrete.Rezarvation
@{
    ViewData["Title"] = "NewRezervation";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Yeni Rezervasyonlar Sayfası</h4>
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <p class="card-text">Yeşil Ayak safasımızdaki etkinliklere rezarvasyon almak için aşağıdaki panelde ki tüm alanları doldurunuz.</p>
                    <form method="post">
                        <div class="form-group">
                            @Html.Label("Kişi Sayısı")
                            <input type="text" asp-for="MemontCount" class="form-control" />
                        </div>

                        <div class="form-group">
                            @Html.Label("Tarih")
                            <input type="date" asp-for="RezarvationDate" class="form-control" />
                        </div>

                        <div class="form-group">
                            @Html.Label("Eklemek istediğiniz")
                            <input type="text" asp-for="Sescription" class="form-control" />
                        </div>
                        <div class="form-group">
                            @Html.Label("Etkinlik ID")
                            <input type="text" asp-for="DestinationID" class="form-control" />
                        </div>
                        <button class="btn btn-outline-success" onclick="alert('Rezervasyonunuz başlangıçta onay bekliyor şeklinde alınacaktır.Rezervasyon onaylanma süreci için güncel rezervasyonlarım menüsünü takip etmeyi unutmayın');">Rezervasyon Yap</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>