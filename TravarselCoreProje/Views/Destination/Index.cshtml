@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!doctype html>
<html lang="tr">
<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Etkinlikler </h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="/Default/Index">Ana Sayfa</a></li>
                    <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Etkinlikler </li>
                </ul>
            </div>
        </div>
    </section>
    <section class="grids-1 py-5">
        <div class="grids py-lg-5 py-md-4">
            <div class="container">
                <h3 class="hny-title mb-5">Etkinliklerimiz</h3>
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4 col-6 mb-3">
                            <div class="column">
                                <a href="/Destination/DestinationDetails/@item.DestinationID">
                                    <img style="height:210px;width:360px; object-fit:cover;" src="~/ImageDestination/@item.Image" alt="" class="img-fluid">
                                </a>
                                <div class="info">
                                    <h4 class="mb-3">@item.DestinationName</h4>
                                    <h6>@item.District / @item.City</h6>
                                    <p>@item.DayNight</p>
                                    <div class="dst-btm">
                                        <h6 class="">Baslayan Fiyatlarla</h6>
                                        <span>@item.Price</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
    <link rel="stylesheet" href="~/Traversal-Starter/assets/css/style-liberty.css">
    <script src="~/Traversal-Starter/assets/js/bootstrap.min.js"></script>
</body>
</html>
