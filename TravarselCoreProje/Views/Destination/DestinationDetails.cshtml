
@model Destination

@{
    ViewData["Title"] = "DestinationDetails";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!doctype html>
<html lang="tr">

<body>
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container d-flex justify-content-between">
                <div class="col-6">
                    <h2 class="title">Etkinlik Detayları</h2>
                    <ul class="breadcrumbs-custom-path mt-2">
                        <li><a href="/Default/Index">Ana Sayfa</a></li>
                        <li><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span><a href="/Destination/Index">Etkinlikler</a></li>
                        <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> @Model.DestinationName </li>
                    </ul>
                </div>
                <div class="col-4">
                    <div class="d-lg-block d-none">
                        <a href="~/Member/Rezervation/NewRezervation?etkinlikId=@Model.DestinationID" class="btn btn-style btn-secondary">Rezervasyon Yap</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
            <h3 class="blog-desc-big text-center mb-4" style="text-transform:capitalize">
                <span>Bizimle </span><span style="color: #0fcb3a; text-decoration: underline; ">@Model.DestinationName</span><span> Etkinliğine Katılmaya Hazırmısınız</span>
            </h3>
            <div class="blog-post-align">
                <div class="blog-post-img">
                    <a href="#"><img src="~/ImageGuide/@Model.Guide.Image" style=" height: 50px; width: 50px; object-fit: cover;" alt="" class="rounded-circle img-fluid" /></a>
                </div>
                <div class="blog-post-info">
                    <div class="author align-items-center mb-1">
                        <h6>@Model.Guide.Name</h6>
                    </div>
                    <ul class="blog-meta">
                        <li class="meta-item blog-lesson">
                            <span class="meta-value"> @(((DateTime)Model.Date).ToString("dd-MMM-yyyy")) </span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <!--/blog-post-->
        <div class="blog-content-inf pb-5">
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content">
                        <img src="/ImageDestination/@Model.Image" style="height:500px; width:100%; object-fit:cover;" class="radius-image img-fluid mb-5" alt="" />
                    </div>
                </div>
                <div class="hizala">
                    <div class="single-post-content">
                        @Html.Raw(Model.Content)

                        <br />
                        <div class="sing-post-thumb mb-5 row pt-3">
                            <div class="col-sm-6">
                                <a href="#url"><img src="/ImageDestination/@Model.Image1" style=" width: 100%; height: 210px; object-fit: cover;" class="img-fluid radius-image" alt=""></a>
                            </div>
                            <div class="col-sm-6 mt-sm-0 mt-3">
                                <a href="#url"><img src="/ImageDestination/@Model.Image2" style=" width: 100%; height: 210px; object-fit: cover;" class="img-fluid radius-image" alt=""></a>
                            </div>
                        </div>
                        <br />
                        <blockquote class="blockquote my-5">
                            <div class="icon-quote"><span class="fa fa-quote-left" aria-hidden="true"></span></div>
                            UNUTMAYIN DOĞADAN SADECE FOTOĞRAF ALIYOR, SADECE AYAK İZİ BIRAKIYORUZ. KEYİFLİ YÜRÜYÜŞLER.
                            <footer class="blockquote-footer mt-3">
                                Yavuz Koz (Admin)
                            </footer>
                        </blockquote>
                        <br />

                        <div class="author-card mt-5">
                            <div class="row align-items-center">
                                <div class="col-sm-3 col-6">
                                    <div>
                                        <img src="~/ImageGuide/@Model.Guide.Image" style=" height: 150px; width: 150px; object-fit: cover;" alt="" class="rounded-circle img-fluid">
                                    </div>
                                </div>
                                <div class="col-sm-9 mt-sm-0 mt-3">
                                    <h3 class="mb-3 title">@Model.Guide.Name</h3>
                                    <p>
                                        @Model.Guide.Description
                                    </p>
                                    <ul class="author-icons mt-4">
                                        <li>
                                            <a class="facebook" href="#url" target="_blank">
                                                <span class="fa fa-facebook"
                                                      aria-hidden="true"></span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="twitter" href="#url" target="_blank">
                                                <span class="fa fa-twitter"
                                                      aria-hidden="true"></span>
                                            </a>
                                        </li>
                                        <li>
                                            <a class="" href="#url" target="_blank">
                                                <span class="fa fa-instagram"
                                                      aria-hidden="true"></span>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        @await Component.InvokeAsync("_CommentList", new { id = ViewBag.i })

                        @await Html.PartialAsync("~/Views/Comment/AddComment.cshtml")


                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

