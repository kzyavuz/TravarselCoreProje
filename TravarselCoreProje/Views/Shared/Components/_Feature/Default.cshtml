<div class="best-rooms py-5">
    <div class="container py-md-5">
        <h6 class="sub-title">Etkinlik Türleri</h6>
        <h3 class="hny-title">Öne Çıkan Etkinlik Türleri</h3>
        <br />
        <div class="ban-content-inf row">
            <div class="maghny-gd-1 col-lg-6">
                <div class="maghny-grid">
                    <figure class="effect-lily border-radius  m-0">
                        <img class="img-fluid" src="~/CatagoryImage/DogaYuruyus.jpg" alt="" />
                        <figcaption>
                            <div>
                                <h4>3Days, 4 Nights</h4>
                                <p>From 1720$ </p>
                            </div>

                        </figcaption>
                    </figure>
                </div>
            </div>
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        if (item.CatagoryName != "Doğa Yürüyüsü")
                        {
                            <div class="maghny-gd-1 col-6 mb-4">
                                <div class="maghny-grid">
                                    <figure class="effect-lily border-radius">
                                        <img class="img-fluid" src="~/CatagoryImage/@item.CatagoryImage" />
                                        <figcaption>
                                            <div>
                                                <h4>@item.CatagoryName</h4>
                                            </div>
                                        </figcaption>
                                    </figure>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
