
@model List<Destination>
<div class="col-12 mt-4">
    <div class="card mb-4">
        <div class="card-header pb-2 p-3">
            <h6 class="mb-1">Etkinlikler</h6>
            <p class="text-sm">Yayınlanan Son etkinlik detayları</p>
        </div>
        <div class="card-body px-3 pt-0">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-xl-3 col-md-6 mb-xl-0 mb-4" style="border-style: groove">
                        <div class="card card-blog card-plain">
                            <div class="position-relative">
                                <a class="d-block shadow-xl border-radius-xl">
                                    <img src="~/ImageDestination/@item.Image" style="width:400px; height:200px; object-fit:cover;" alt="img-blur-shadow" class="img-fluid shadow border-radius-xl">
                                </a>
                            </div>
                            <div class="card-body px-1 pb-0" style="border-style:inset">
                                <p class="text-gradient text-dark text-sm"> @item.District / @item.City</p>
                                @if (item.DayNight != null)
                                {
                                    <p class="text-gradient text-dark text-sm"> @item.DayNight</p>

                                }
                                <h5 class="font-weight-bold">
                                    @item.DestinationName
                                </h5>
                                @if (item.Content.Length > 155)
                                {
                                    <p class="mb-1 text-sm">

                                        @Html.Raw(item.Content.Substring(0, 155))...
                                    </p>
                                }
                                else
                                {
                                    <p class="mb-1 text-sm">

                                        @Html.Raw(item.Content)
                                    </p>

                                }
                                <div class="d-flex align-items-center justify-content-between">
                                    <a href="/Destination/DestinationDetails/@item.DestinationID" class="btn btn-outline-primary btn-sm mb-0">Tur Detayı</a>
                                    <div class="avatar-group mt-2">
                                        <a href="javascript:;" style="width:30px;" class="avatar avatar-xs rounded-circle" data-bs-toggle="tooltip" data-bs-placement="bottom" title="">
                                            <img alt="Image placeholder" style="height:30px; object-fit:cover;" src="~/ImageGuide/@item.Guide.Image">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>