@model List<Comment>
<div class="comments mt-5">
    <h4 class="side-title ">Yorumar (@Model.Count)</h4>
    @foreach (var item in Model)
    {
        <div class="media mt-4">
            <div class="img-circle">
                <img src="~/UserImages/@item.AppUser.Image" class="img-fluid" alt="...">
            </div>
            <div class="media-body">

                <ul class="time-rply mb-2">
                    <li>
                        <a href="#URL" class="name mt-0 mb-2 d-block">@item.AppUser.Name @item.AppUser.NamSurname</a>
                        @(((DateTime)item.DateTime).ToString("dd-MMM-yyyy"))

                    </li>
                </ul>
                <p>
                    @item.Content
                </p>
            </div>
        </div>
    }
</div>