        <div class="w3l-footer-16-main py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-6 column">
                        <div class="row">
                            <div class="col-md-6 column">
                                <h3>Sayfalar</h3>
                                <ul class="footer-gd-16">
                                    <li><a href="/Default/Index">Ana Sayfa</a></li>
                                    <li><a href="About/Index">Hakkımızda</a></li>
                                    <li><a href="/DestinationController1/Index">Etkinlikler</a></li>
                                    <li><a href="blog.html">Rehberlerimiz</a></li>
                                    <li><a href="contact.html">İletişim</a></li>
                                </ul>
                            </div>
                            <div class="col-md-6 column mt-md-0 mt-4">
                                <h3>Etkinlikler</h3>
                                <ul class="footer-gd-16">
                                    @foreach (var item in Model)
                                    {
                                        <li><a href="/DestinationController1/Index/">@item.CatagoryName</a></li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-12 column pl-lg-5 column4 mt-lg-0 mt-5">
                        <h3>Haber Bülteni </h3>
                        <div class="end-column">
                            <h4>Yeni etkinliklerden anında haberdar ol</h4>
                            <form action="#" class="subscribe" method="post">
                                <input type="email" name="email" placeholder="Email Address" required="">
                                <button type="submit">Hadi</button>
                            </form>
                            <p>Etkinlerimizden haberdar olmak için bize katıl. Sana spam postası göndermiyeceğiz.</p>
                        </div>
                    </div>
                </div>
                <div class="d-flex below-section justify-content-between align-items-center pt-4 mt-5">
                    <div class="columns text-lg-left text-center">
                        <p>
                            &copy; 2020 YeşilAyak. Tüm hakları saklıdır. Tasarım: KOZLOW
                        </p>
                    </div>
                    <div class="columns-2 mt-lg-0 mt-3">
                        <ul class="social">
                            <li>
                                <a href="#facebook"><span class="fa fa-facebook" aria-hidden="true"></span></a>
                            </li>
                            <li>
                                <a href="#twitter"><span class="fa fa-twitter" aria-hidden="true"></span></a>
                            </li>
                            <li>
                                <a href="#github" title="kz_kozlow"><span class="fa fa-github" aria-hidden="true"></span></a>
                            </li>
                            <li>
                                <a href="#github" title="reza_dysta"><span class="fa fa-github" aria-hidden="true"></span></a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- move top -->
        <button onclick="topFunction()" id="movetop" title="Go to top">
            <span class="fa fa-angle-up"></span>
        </button>
        <script>
            window.onscroll = function () {
                scrollFunction()
            };

            function scrollFunction() {
                if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
                    document.getElementById("movetop").style.display = "block";
                } else {
                    document.getElementById("movetop").style.display = "none";
                }
            }

            function topFunction() {
                document.body.scrollTop = 0;
                document.documentElement.scrollTop = 0;
            }
        </script>
        <!-- //move top -->
        <script>
            $(function () {
                $('.navbar-toggler').click(function () {
                    $('body').toggleClass('noscroll');
                })
            });
        </script>
    </section>
</footer>