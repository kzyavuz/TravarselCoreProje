@model IEnumerable<Catagory>
<header id="site-header" class="fixed-top">
    <div class="container">
        <nav class="navbar navbar-expand-lg stroke">
            <div class="d-flex justify-content-center">
                <a class="navbar-brand" href="/Default/Index/">
                    <img src="~/Traversal-Starter/assets/images/yesilAyak_icon.png" alt="YeşilAyak logo" title="Your logo" style="height:35px;" />
                </a>
                <h2>
                    <a class="navbar-brand mr-lg-5" href="/Default/Index/" style="color: #0a8927;">
                        YeşilAyak
                    </a>
                </h2>
            </div>

            <button class="navbar-toggler  collapsed bg-gradient" type="button" data-toggle="collapse"
                    data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon fa icon-expand fa-bars"></span>
                <span class="navbar-toggler-icon fa icon-close fa-times"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/Default/Index/">Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/About/Index/">Hakkımızda</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="/DestinationController1/Index/" id="navbarDropdown1" role="button" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            Etkinlikler<span class="fa fa-angle-down"></span>
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown1">
                            <a class="dropdown-item" href="/DestinationController1/Index/">Tüm Etkinlikler</a>

                            @foreach (var item in Model)
                            {
                                <a class="dropdown-item" href="/DestinationController1/Index/">@item.CatagoryName</a>

                            }

                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Rehberlerimiz</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Contact/Index/">İletişim</a>
                    </li>

                </ul>
            </div>
            <div class="mobile-position">
                <nav class="navigation">
                    <div class="theme-switch-wrapper">
                        <label class="theme-switch" for="checkbox">
                            <input type="checkbox" id="checkbox">
                            <div class="mode-container">
                                <i class="gg-sun"></i>
                                <i class="gg-moon"></i>
                            </div>
                        </label>
                    </div>
                </nav>
            </div>
            <div class="d-flex justify-content-end ">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="~/Member/Dashboard/Index" class="btn btn-outline-info" style="float: left;">
                        <span class="symbol-input100">
                            <i class="fa fa-user-circle" aria-hidden="true"></i>
                        </span>
                        Profilim
                    </a>
                }
                else
                {
                    <a href="~/LoginController1/SignUn" class="btn btn-outline-info" style="float: left;">
                        <span class="symbol-input100">
                            <i class="fa fa-user-circle" aria-hidden="true"></i>
                        </span>
                        Giriş Yap
                    </a>
                }

            </div>

        </nav>
    </div>
</header>