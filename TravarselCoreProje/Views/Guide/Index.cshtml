
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Deneyimli Rehber Doştlarımız</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rehberlerimiz</li>
            </ul>
        </div>
    </div>
</section>

<section class="w3l-team" id="team">
    <div class="team-block py-5">
        <div class="container py-lg-5">
            <div class="title-content text-center mb-lg-3 mb-4">
                <h6 class="sub-title">Rehberlerimiz</h6>
                <h3 class="hny-title">Rehberlerimizle Tanışın</h3>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-3 col-md-4 col-6 mt-lg-5 mt-4">
                        <div class="box16">
                            <a href="#url"><img src="~/ImageGuide/@item.Image" alt="" style="height:300px; object-fit:cover;" class="img-fluid" /></a>
                            <div class="box-content">
                                <h3 class="title"><a href="#url">@item.Name</a></h3>
                                @if (item.Description != null && item.Description.Length > 50)
                                {
                                    <span class="post">@item.Description.Substring(0, 50) </span>

                                }
                                else
                                {
                                    <span class="post">@item.Description</span>
                                }
                                <ul class="social">
                                    <li>
                                        <a href="https://www.facebook.com/@item.InstagramUrl/" class="facebook" target="_blank">
                                            <span class="fa fa-facebook"></span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://x.com/@item.TwitterUrl" class="twitter" target="_blank">
                                            <span class="fa fa-twitter"></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>