
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>404 - Aranan Sayfa Bulunamadı</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        .container {
            padding-top: 5%;
            text-align: center;
        }

        .ops {
            max-width: 100%;
            height: auto;
        }

        h3 {
            font-weight: bold;
            font-size: 24px;
            text-align: center;
            margin-top: 20px;
        }

        .btn-animated {
            font-size: 18px;
            padding: 10px 20px;
            border: 2px solid transparent;
            background-color: #3498db;
            color: #f4ff05;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 0 0 2px rgba(0, 123, 255, 0);
        }
            .btn-animated:hover {
                color: #f4ff05;
            }
    </style>
</head>

<body>
    <div class="container">
        <img class="ops mt-5" src="~/w404/404.svg" alt="404 Image" />
        <br />
        <h3 class="font-weight-bold mt-4">
            Oooooppss! Aradığınız Sayfa Bulunamadı
        </h3>
        <a class="btn btn-animated " href="/Default/Index/">Ana Sayfaya Dön</a>
    </div>



    <!-- Bootstrap JS ve jQuery (eğer gerekiyorsa) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var button = document.querySelector('.btn-animated');
            var scale = 1;
            var scaleFactor = 0.1; // Büyüme/Küçülme faktörü

            function animateButton() {
                if (scale === 1) {
                    scale = 1.1;
                } else {
                    scale = 1;
                }
                button.style.transform = 'scale(' + scale + ')';
                var boxShadowSize = 4 * scale; // Box-shadow boyutunu buton boyutuna bağlı olarak ayarla
                button.style.boxShadow = '0 0 ' + boxShadowSize + 'px 2px rgba(0, 123, 255, 0.4)';
            }

            // 1000ms (1 saniye) aralıklarla animasyonu çalıştır
            setInterval(animateButton, 1000);
        });
    </script>
</body>

</html>

